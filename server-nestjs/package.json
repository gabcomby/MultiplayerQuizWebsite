{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.2.0",
    "private": true,
    "scripts": {
        "prebuild": "rimraf out",
        "build": "rimraf out && nest build",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "start": "rimraf out && nest start --watch",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish",
        "lint:fix": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish --fix",
        "test": "jest",
        "coverage": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@nestjs/common": "^10.1.3",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.1.3",
        "@nestjs/mongoose": "^10.0.1",
        "@nestjs/platform-express": "^10.1.3",
        "@nestjs/platform-socket.io": "^10.1.3",
        "@nestjs/swagger": "^7.1.7",
        "@nestjs/websockets": "^10.1.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "module-alias": "^2.2.3",
        "mongoose": "7.4.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^5.0.1",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.1.11",
        "@nestjs/schematics": "^10.0.2",
        "@nestjs/testing": "^10.1.3",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.3",
        "@types/node": "^20.4.8",
        "@types/sinon": "^10.0.16",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-deprecation": "^1.5.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-jsdoc": "^46.4.6",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-unicorn": "^48.0.1",
        "jest": "29.6.2",
        "mongodb-memory-server": "9.1.3",
        "prettier": "^3.0.1",
        "sinon": "^15.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.1.6"
    },
    "_moduleAliases": {
        "@app": "out/server-nestjs/app",
        "@common": "out/common"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "app/**/*.(t|j)s",
            "!app/app.module.ts",
            "!app/index.ts"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@app(.*)$": "<rootDir>/app/$1",
            "^@common(.*)$": "<rootDir>/../common/$1"
        }
    }
}
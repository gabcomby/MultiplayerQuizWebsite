    "version": "1.0.0",
    "configurations": [
        {
            "name": "Debug server (Attach)",
            "port": 9229,
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}/server",
            "type": "pwa-node"
        },
        {
            "name": "Launch Client With Debug",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client"
        }
    ]
}
